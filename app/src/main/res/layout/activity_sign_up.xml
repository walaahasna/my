<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"


    >

    <include layout="@layout/toolbar_layout" android:id="@+id/toolbar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_below="@+id/toolbar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/msgname"
        android:layout_marginTop="5dp"

        />

    <EditText
          android:layout_width="match_parent"
        android:layout_height="40dp"
         android:ems="10"
        android:id="@+id/username"
        android:hint="username or  mobile "
        android:layout_below="@+id/msgname"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:paddingLeft="5dp"

        android:layout_marginBottom="5dp"
        android:background="@android:color/background_light"



        android:textColorHint="@android:color/darker_gray"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_below="@+id/username"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:background="@android:color/background_light"
        android:text="@string/Password"
        android:paddingRight="100dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/msgpass"
        android:textColor="#FF0000"
        android:layout_below="@+id/password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/fullname"
        android:focusable="true"
        android:paddingLeft="5dp"
        android:layout_below="@+id/password"

        android:layout_marginBottom="5dp"

        android:hint="Fullname"
        android:background="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mobile"
        android:layout_below="@+id/fullname"
        android:paddingLeft="5dp"

        android:textColorHint="@android:color/darker_gray"
        android:hint="mobile number"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/background_light"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/email"
        android:paddingLeft="5dp"
        android:layout_below="@+id/mobile"

        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:textColorHint="@android:color/darker_gray"
        android:hint="email"

        android:layout_marginTop="5dp"
        android:background="@android:color/background_light"
        android:layout_gravity="left" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:layout_below="@+id/email"
        android:id="@+id/msgemail"
        android:textColor="#FF0000"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/address"
        android:layout_below="@+id/email"

        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:textColorHint="@android:color/darker_gray"
        android:hint="address"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:background="@android:color/background_light" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/sigup"
        android:background="#47e981"
        android:textColor="#3F51B5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/address"
        android:layout_marginTop="10dp"
         />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="canel"
        android:id="@+id/canel"
        android:background="#ffb828"
        android:textColor="#3F51B5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sigup"
        android:layout_marginTop="10dp"

        />

    </LinearLayout>

    </RelativeLayout>
